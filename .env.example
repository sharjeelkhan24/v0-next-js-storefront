# ===========================================
# FairCart Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your API keys

# ===========================================
# REQUIRED: Product Data APIs
# ===========================================

# RapidAPI Key (get from https://rapidapi.com)
# Subscribe to these APIs on RapidAPI:
# - Real-Time Amazon Data: https://rapidapi.com/letscrape-6bRBa3QguO5/api/real-time-amazon-data
# - Walmart: https://rapidapi.com/apidojo/api/walmart2
RAPIDAPI_KEY=your_rapidapi_key_here

# eBay Developer App ID (get from https://developer.ebay.com)
# Optional but recommended for price comparison
EBAY_APP_ID=your_ebay_app_id_here

# ===========================================
# Payment Processing
# ===========================================

# Stripe (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ===========================================
# Database
# ===========================================

# MongoDB Connection String
# Get from MongoDB Atlas: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/faircart

# Set to "true" to use mock database (for development without MongoDB)
USE_MOCK_DB=false

# ===========================================
# AI Features (Optional)
# ===========================================

# OpenAI API Key (for voice chat / AI features)
OPENAI_API_KEY=sk-your_openai_key_here

# ===========================================
# App Configuration
# ===========================================

# Base URL (for Stripe redirects, etc.)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Environment
NODE_ENV=development

# Debug logging
DEBUG=true
